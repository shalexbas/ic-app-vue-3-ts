{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/dapp/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src/dapp/**/*.ts", "src/dapp/**/*.d.ts", "src/dapp/**/*.tsx", "src/dapp/**/*.vue"]
}
